@model Subasta.Models.Auction
@{
    ViewBag.Title = "Actualizar";
}

<h3 class="mb-4">Ofertar Subasta</h3>

<form action="@Url.Action("Actualizar", "Subasta")" method="post">

    @Html.ValidationMessageFor(model => model.MensajeError, "", new { @class = "text-danger mb-5" })

    <div class="row">
        <div class="col-md-3 ">
            <label class="form-label Negrita">Clave Subasta:</label>
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(x => x.AuctionId, new { @class = "form-control-plaintext Negrita2", @readOnly = true })
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 ">
            <label class="form-label Negrita">Nombre del Producto:</label>
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control-plaintext Negrita2", @readOnly = true })
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 ">
            <label class="form-label Negrita">Descripcion del Producto:</label>
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control-plaintext Negrita2", @readOnly = true })
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 ">
            <label class="form-label Negrita">Fecha de Inicio:</label>
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control-plaintext Negrita2", @readOnly = true })
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 ">
            <label class="form-label Negrita">Fecha de Fin:</label>
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control-plaintext Negrita2", @readOnly = true })
        </div>
    </div>

    <div class="row mb-1">
        <div class="col-md-3 ">
            <label class="form-label Negrita" >Usuario que oferto mas alto:</label>
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control-plaintext Negrita2", @readOnly = true })
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 ">
            <label class="form-label Negrita">Oferta actual mas alta:</label>
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(x => x.HighestBid, new { @class = "form-control Negrita2" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary offset-md-3 mt-3" value="Ofertar" />
        <a href="@Url.Action("Index","Subasta")" class="btn btn-secondary mt-3">Cancelar</a>
    </div>
</form>

