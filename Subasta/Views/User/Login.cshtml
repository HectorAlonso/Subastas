<body>

    

    <div class="contenedor">

        <div style="margin-right: 50px;">
            <p style="font-size: 54px; font-weight:700">Subastas Mx</p>
        </div>

        <div class="card col-md-4 Carta align-items-md-center">
            <h4 class="mt-3">Iniciar Sesion</h4>
            <div class="card-body col-md-10 ">
                <form action="@Url.Action("Login", "User")" method="post">

                    <div class="row mb-3">
                        <div>
                            <label class="form-label Negrita">Nombre de Usuario</label>
                        </div>
                        <div>
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div>
                            <label class="form-label Negrita">Contraseña</label>
                        </div>
                        <div>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control col-md-2" })
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="row ">
                        <div class="d-flex justify-content-center mb-1">
                            <input type="submit" value="Iniciar Sesion" class="btn btn-primary" />
                        </div>
                        <div class="d-flex justify-content-center">
                            <p>No tienes una cuenta? <a href="@Url.Action("Registrarse","User")">Registrate</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
